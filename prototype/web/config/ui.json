    "enabled": true,
    "autoSave": true,
    "autoSaveInterval": 30000,
    "maxSlots": 3,
    "showExportImport": true
  },
  "features": {
    "diceRolls": true,
    "statNotifications": true,
    "choiceBadges": true,
    "contentBatching": true,
    "thresholdEffects": true
