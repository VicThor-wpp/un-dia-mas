{
  "theme": {
    "colors": {
      "bgDark": "#1a1a1a",
      "bgLight": "#2a2a2a",
      "textMain": "#e0e0e0",
      "textMuted": "#666",
      "accent": "#ff6b35",
      "success": "#4caf50",
      "warning": "#ff9800",
      "error": "#f44336",
      "info": "#2196f3"
    },
    "fonts": {
      "main": "'Courier New', Courier, monospace",
      "size": {
