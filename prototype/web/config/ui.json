{
  "theme": {
    "colors": {
      "bgDark": "#1a1f2e",
      "bgLight": "#252d3d",
      "textMain": "#e8dfd0",
      "textMuted": "#9a8f80",
      "accent": "#e85d04",
      "success": "#7cb518",
      "warning": "#d4a373",
